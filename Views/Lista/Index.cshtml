@model IEnumerable<Lista.Models.ListaModel>
@{
    ViewData["Title"] = "Listas";
}

<h1>Listas</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Nova Lista</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Data Criação</th>
            <th>Ativo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.Descricao</td>
            <td>@item.DataCriacao.ToString("dd/MM/yyyy HH:mm")</td>
            <td>@item.Ativo</td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>
